= form_for @section do |f|
  -if @section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :position
    = f.number_field :position, :size => 3
  .actions
    = f.submit 'Save'
    = f.button 'Cancel', :onclick => "javascript: document.location = #{sections_url.to_json}; return false;"
